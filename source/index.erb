---
title: Energy Globe Award
---

<div id="application">

  <header>
    <h1 class="headline">Energy Globe Award</h1>
  </header>

  <section ng-controller="AwardsController">

    <ul class="category-filter" ng-repeat="category in categories">
      <li>
        <input type="checkbox" id="category_checkbox_{{category}}" ng-model="categoryIsShown[category]">
        <label for="category_checkbox_{{category}}">{{category}}</label>
      </li>
    </ul>

    <div class="award" ng-repeat="award in awards | categoriesFilter:categoryIsShown">
      <h3>{{ award.title }}</h3>
    </div>

  </section>

</div>
